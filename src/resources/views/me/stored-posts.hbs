<div class="mt-4">
    <h3>Khoá học của tôi</h3>
    <table class="table mt-4">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Tên bài</th>
                <th scope="col">Trình độ</th>
                <th scope="col">Thời gian tạo</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each posts}}
            <tr>
                <th scope="row">{{sum @index 1}}</th>
                <td>{{this.name}}</td>
                <td>{{this.level}}</td>
                <td>{{this.createAt}}</td>
                <td>
                    <a href="/posts/{{this._id}}/edit" class="btn btn-dark">Sửa</a>
                    <a href="" class="btn btn-dark">Xoá</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>