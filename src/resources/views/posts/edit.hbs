<div class="mt-4">
    <h3>Sửa bài viết</h3>
    <form class="mt-4" method="POST" action="/posts/{{post._id}}?_method=PUT">
        <input type="hidden" name="_csrf" value="{{_token}}">
        <div class="form-group">
            <label for="name">Tên bài</label>
            <input type="text" class="form-control" value="{{post.name}}" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="description">Mô tả</label>
            <textarea class="form-control" id="description" name="description">{{post.description}}</textarea>
        </div>
        <div class="form-group">
            <label for="videoID">Video ID</label>
            <input type="text" class="form-control" value="{{post.videoID}}" id="videoID" name="videoID">
        </div>
        <div class="form-group">
            <label for="level">Trình độ</label>
            <input type="text" class="form-control" value="{{post.level}}" id="level" name="level">
        </div>
        <button type="submit" class="btn btn-primary">Lưu lại</button>
    </form>
</div>